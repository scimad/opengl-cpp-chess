{
    "version": "0.2.0",
    "configurations": [
    {   
        "name": "DEBUG CHESS",
        "type": "cppdbg",
        "request": "launch",
        "preLaunchTask": "Chess-Build",
        "cwd": "${workspaceFolder}/build",
        "program": "${workspaceFolder}/build/opengl-chess",
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            },
            {
                "description": "Set Disassembly Flavor to Intel",
                "text": "-gdb-set disassembly-flavor intel",
                "ignoreFailures": true
            }
        ]
    }
    ]
}
